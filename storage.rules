rules_version = '2';

// Craft rules based on data in your Firestore database
// auth.token.email is the email of the authenticated user
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is an admin in Firestore
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email != null &&
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.token.email.lower()));
    }

    match /users/{userId}/backgrounds/{allPaths=**} {
      // Allow users to read and write their own backgrounds
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow admins to manage all backgrounds
      allow read, write: if isAdmin();
    }

    match /admin_backgrounds/{allPaths=**} {
      // Allow authenticated users to read shared backgrounds
      allow read: if request.auth != null;
      // Only admins can write to shared backgrounds
      allow write: if isAdmin();
    }
    
    // Default deny for everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}