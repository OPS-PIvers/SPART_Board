rules_version = '2';

// Craft rules based on data in your Firestore database
// auth.token.email is the email of the authenticated user
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is an admin in Firestore
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email != null &&
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.token.email.lower()));
    }

    // Helper function to check if a user can read a specific admin background
    function canReadAdminBackground(backgroundId) {
      return request.auth != null &&
             request.auth.token.email != null &&
             firestore.exists(/databases/(default)/documents/admin_backgrounds/$(backgroundId)) &&
             (
               isAdmin() ||
               firestore.get(/databases/(default)/documents/admin_backgrounds/$(backgroundId)).data.accessLevel == "public" ||
               (
                 firestore.get(/databases/(default)/documents/admin_backgrounds/$(backgroundId)).data.accessLevel == "beta" &&
                 request.auth.token.email.lower() in firestore.get(/databases/(default)/documents/admin_backgrounds/$(backgroundId)).data.betaUsers
               )
             );
    }

    match /users/{userId}/backgrounds/{allPaths=**} {
      // Allow users to read and write their own backgrounds
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow admins to manage all backgrounds
      allow read, write: if isAdmin();
    }

    match /users/{userId}/screenshots/{allPaths=**} {
      // Allow users to read and write their own screenshots
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /admin_backgrounds/{backgroundId} {
      // Allow reads only if Firestore metadata permits this user for the background
      allow read: if canReadAdminBackground(backgroundId);
      // Only admins can manage shared backgrounds
      allow write: if isAdmin();
    }
    
    // Default deny for everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
