{
  "name": "spart-board",
  "description": "SPART Board Application",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@10.26.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/generate-version.js && vite",
    "build": "node scripts/generate-version.js && vite build",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "install:ci": "pnpm install --frozen-lockfile && pnpm -C functions install --frozen-lockfile",
    "install:all": "pnpm install && pnpm -C functions install",
    "build:all": "pnpm run build && pnpm -C functions run build",
    "type-check:all": "pnpm run type-check && pnpm -C functions run type-check",
    "lint:all": "pnpm run lint",
    "validate": "pnpm type-check && pnpm lint && pnpm format:check && pnpm test",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "hono": "^4.11.4",
      "diff": "^8.0.3",
      "tar": "^7.5.4",
      "lodash": "^4.17.23"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@imgly/background-removal": "^1.7.0",
    "firebase": "^12.8.0",
    "html-to-image": "^1.11.13",
    "jszip": "^3.10.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@google/genai": "^1.39.0",
    "@playwright/test": "^1.58.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/tesseract.js": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.4",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "crypto-js": "^4.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.5",
    "firebase-functions-test": "^3.4.1",
    "firebase-tools": "^15.4.0",
    "globals": "^17.2.0",
    "hono": "^4.11.4",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "oauth-1.0a": "^2.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
